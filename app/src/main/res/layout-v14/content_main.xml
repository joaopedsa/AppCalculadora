<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.joaopedrosantana.appcalculadora.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/gridLayout">
        <Button
            android:text="7"
            android:id="@+id/button7"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="8"
            android:id="@+id/button8"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="+"
            android:id="@+id/buttonSoma"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_width="60dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="*"
            android:id="@+id/buttonX"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_width="60dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="="
            android:id="@+id/buttonIgual"
            android:layout_row="4"
            android:layout_column="3"
            android:layout_width="60dp"
            android:background="@android:color/holo_blue_bright"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="C"
            android:id="@+id/buttonC"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="60dp"
            android:background="@android:color/holo_blue_bright"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="5"
            android:id="@+id/button5"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="1"
            android:id="@+id/button1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="2"
            android:id="@+id/button2"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="3"
            android:id="@+id/button3"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="0"
            android:id="@+id/button0"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="."
            android:id="@+id/buttonponto"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="4"
            android:id="@+id/button4"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="-"
            android:id="@+id/buttonMenos"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_width="60dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="%"
            android:id="@+id/buttonporcento"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_width="60dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="9"
            android:id="@+id/button9"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

        <Button
            android:text="6"
            android:id="@+id/button6"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="60dp"
            android:background="@android:color/darker_gray"
            android:layout_height="60dp"
            android:onClick="clique"/>

    </GridLayout>

    <TextView
        android:text="0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="64dp" />

</RelativeLayout>
